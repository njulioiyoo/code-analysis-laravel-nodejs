{
    "preset": "laravel",
    "rules": {
        "simplified_null_return": true,
        "braces": true,
        "array_syntax": {
            "syntax": "short"
        },
        "ordered_imports": {
            "sort_algorithm": "alpha"
        },
        "no_unused_imports": true
    },
    "exclude": [
        "bootstrap",
        "storage",
        "vendor"
    ]
}