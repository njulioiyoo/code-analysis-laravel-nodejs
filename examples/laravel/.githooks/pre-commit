#!/bin/bash

set -e

echo "🚀 Running Laravel pre-commit hooks..."

# Get list of staged PHP files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep "\.php$" || true)

if [ -z "$STAGED_FILES" ]; then
    echo "✅ No PHP files staged for commit."
    exit 0
fi

echo "📝 Staged PHP files:"
echo "$STAGED_FILES"

# Check if we're in a Docker environment or local environment
if [ -f "/.dockerenv" ]; then
    PINT_CMD="./vendor/bin/pint"
    PHPSTAN_CMD="./vendor/bin/phpstan"
else
    # Assume we're running via docker-compose or need to use docker
    PINT_CMD="docker-compose exec codeanalysis-laravel ./vendor/bin/pint"
    PHPSTAN_CMD="docker-compose exec codeanalysis-laravel ./vendor/bin/phpstan"
fi

# Check code formatting with Pint
echo ""
echo "🎨 Checking code formatting with Laravel Pint..."
if ! $PINT_CMD --test; then
    echo "❌ Code formatting issues found!"
    echo "💡 Run '$PINT_CMD' to fix formatting issues."
    exit 1
fi
echo "✅ Code formatting looks good!"

# Run static analysis with Larastan
echo ""
echo "🔍 Running static analysis with Larastan..."
if ! $PHPSTAN_CMD analyse --no-progress; then
    echo "❌ Static analysis issues found!"
    echo "💡 Please fix the issues reported by Larastan."
    exit 1
fi
echo "✅ Static analysis passed!"

echo ""
echo "🎉 All pre-commit checks passed! Ready to commit."