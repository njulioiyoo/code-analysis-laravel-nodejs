{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(./vendor/bin/phpstan analyse:*)",
      "Bash(docker run:*)",
      "Bash(cat:*)",
      "Bash(grep:*)",
      "Bash(MSYS_NO_PATHCONV=1 docker run --rm -v \"$(pwd)/laravel:/var/www/html\" codeanalysis-laravel find /var/www/html -name \"phpstan.neon*\" -exec cat {} ;)",
      "WebFetch(domain:phpstan.org)",
      "WebFetch(domain:github.com)",
      "Bash(ls:*)",
      "Bash(composer show:*)",
      "Bash(MSYS_NO_PATHCONV=1 docker run --rm -v \"$(pwd)/laravel:/var/www/html\" codeanalysis-laravel ./vendor/bin/phpstan analyse --no-progress --memory-limit=512M app/Models/User.php)",
      "Bash(MSYS_NO_PATHCONV=1 docker run --rm -v \"$(pwd)/laravel:/var/www/html\" codeanalysis-laravel ls -la vendor/bin/)",
      "Bash(MSYS_NO_PATHCONV=1 docker run --rm -v \"$(pwd)/laravel:/var/www/html\" codeanalysis-laravel ./vendor/bin/pint --test app/Models/User.php)",
      "Bash(realpath:*)",
      "Bash(MSYS_NO_PATHCONV=1 docker run --rm -v \"$(pwd)/laravel:/var/www/html\" codeanalysis-laravel ./vendor/bin/phpstan analyse --no-progress --memory-limit=512M app/Http/Controllers/Api/CodeAnalysisController.php)",
      "Bash(echo \"Exit code: $?\")",
      "Bash(MSYS_NO_PATHCONV=1 docker run --rm -v \"$(pwd)/laravel:/var/www/html\" codeanalysis-laravel ./vendor/bin/phpstan analyse --no-progress --memory-limit=512M app/Http/Controllers/Api/CodeAnalysisController.php)",
      "Bash(MSYS_NO_PATHCONV=1 docker run --rm -v \"$(pwd)/laravel:/var/www/html\" codeanalysis-laravel ./vendor/bin/phpstan analyse --no-progress --memory-limit=512M /var/www/html/../../../test-larastan-detection.php)",
      "Bash(docker-compose:*)",
      "Bash(docker logs:*)",
      "Bash(curl:*)",
      "Bash(docker exec:*)",
      "Bash(MSYS_NO_PATHCONV=1 docker exec codeanalysis-nodejs ls -la /usr/src/app/views/)",
      "Bash(MSYS_NO_PATHCONV=1 docker exec codeanalysis-nodejs ls -la /usr/src/app/)",
      "Bash(MSYS_NO_PATHCONV=1 docker exec codeanalysis-nodejs pwd)",
      "Bash(MSYS_NO_PATHCONV=1 docker exec codeanalysis-nodejs ls -la /app/)",
      "Bash(MSYS_NO_PATHCONV=1 docker exec codeanalysis-nodejs ls -la /app/views/)",
      "Bash(composer require:*)",
      "Bash(git add:*)"
    ],
    "deny": []
  }
}